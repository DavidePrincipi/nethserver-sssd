package esmith;

use esmith::ConfigDB;;


=head2 validate_acctName_conflict

Returns 'OK' if the account name doesn't yet exist.  Returns a localised error
otherwise.

=cut

my $acctName = shift || die('Missing account name argument');
my $db = esmith::ConfigDB->open_ro() || die('Could not open AccountsDB');

my $domain = $db->get_value('DomainName');
$acctName = $acctName.'@'.$domain;

if (defined getpwnam($acctName) || defined getgrnam($acctName))
{
    print "An account with the same name already exists\n";
    exit 3;
}
exit 0;
